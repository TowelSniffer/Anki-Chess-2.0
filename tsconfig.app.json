{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "resolveJsonModule": true,
    "baseUrl": ".",
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["es2023", "dom"],
    "allowJs": true,
    "checkJs": true,
    "types": [
      "unplugin-icons/types/svelte"
    ],
    "paths": {
      "$components/*": [
        "src/components/*"
      ],
      "$stores/*": [
        "src/stores/*"
      ],
      "$scss/*": [
        "src/scss/*"
      ],
      "$assets/*": [
        "src/assets/*"
      ],
      "$utils/*": [
        "src/utils/*"
      ],
      "$features/*": [
        "src/utils/features/*"
      ],
      "$anki/*": [
        "src/anki_templates/*"
      ],
      "$configs/*": [
        "src/utils/configs/*"
      ],
      "$Types/*": [
        "src/Types/*"
      ],
    },
    "allowImportingTsExtensions": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    "src/**/*.svelte",
    "src/**/*.svelte.ts",
    "src/**/*.json"
  ]
}

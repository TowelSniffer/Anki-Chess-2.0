// tsconfig.json
{
  "compilerOptions": {
    "target": "es2022",
    "module": "esnext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "noEmit": true // Don't create .js files, only check types.
  },
  "include": ["src"] // Or wherever your .ts files are located
}
